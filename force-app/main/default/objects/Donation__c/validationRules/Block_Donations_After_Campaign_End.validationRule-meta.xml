<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Block_Donations_After_Campaign_End</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
    NOT(ISBLANK(Campaign__c)),
    Campaign__r.EndDate &lt; TODAY()
)</errorConditionFormula>
    <errorMessage>This campaign has ended. No new donations are allowed</errorMessage>
</ValidationRule>
